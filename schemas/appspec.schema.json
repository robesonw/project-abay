{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://project-abay.local/schemas/appspec.schema.json",
  "title": "Project Abay AppSpec v0.1",
  "type": "object",
  "required": [
    "app",
    "runtime",
    "data"
  ],
  "properties": {
    "app": {
      "type": "object",
      "required": [
        "name",
        "slug",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "runtime": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "supabase"
          ]
        },
        "tenancy": {
          "type": "object",
          "properties": {
            "model": {
              "type": "string",
              "enum": [
                "shared-db"
              ]
            },
            "tenantIdField": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "security": {
      "type": "object",
      "properties": {
        "auth": {
          "type": "object",
          "properties": {
            "provider": {
              "type": "string",
              "enum": [
                "supabase"
              ]
            }
          },
          "additionalProperties": false
        },
        "rbac": {
          "type": "object",
          "properties": {
            "roles": {
              "type": "object",
              "properties": {
                "roles": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              }
            }
          }
        }
      }
    },
    "data": {
      "type": "object",
      "required": [
        "entities"
      ],
      "properties": {
        "entities": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "name",
              "table",
              "fields"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "table": {
                "type": "string",
                "pattern": "^[a-z0-9_]+$"
              },
              "fields": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": [
                    "name",
                    "type"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "pattern": "^[a-zA-Z0-9_]+$"
                    },
                    "type": {
                      "type": "string"
                    },
                    "required": {
                      "type": "boolean"
                    },
                    "primaryKey": {
                      "type": "boolean"
                    },
                    "default": {
                      "type": [
                        "string",
                        "number",
                        "boolean",
                        "null"
                      ]
                    },
                    "indexed": {
                      "type": "boolean"
                    },
                    "enum": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "references": {
                      "type": "object",
                      "properties": {
                        "table": {
                          "type": "string"
                        },
                        "field": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "table",
                        "field"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "ui": {
      "type": "object",
      "properties": {
        "pages": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "entity",
              "path"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "list",
                  "detail",
                  "create",
                  "edit",
                  "dashboard"
                ]
              },
              "entity": {
                "type": "string"
              },
              "path": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "workflows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "entity",
          "stateField",
          "states",
          "transitions"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "entity": {
            "type": "string"
          },
          "stateField": {
            "type": "string"
          },
          "states": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 2
          },
          "transitions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "from",
                "to",
                "roles"
              ],
              "properties": {
                "from": {
                  "type": "string"
                },
                "to": {
                  "type": "string"
                },
                "roles": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "audit": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "events": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}